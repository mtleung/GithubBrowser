<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.mtleung.githubbrowser.search.SearchViewModel" />
        <variable
            name="hasSearchResult"
            type="boolean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search.container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:id="@+id/search_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search.no_result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{! hasSearchResult}" />
            <!--android:visibility="@{viewmodel.hasSearchResult ? View.GONE : View.VISIBLE}" -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_results"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:visibleGone="@{hasSearchResult}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_user" />
            <!--android:visibility="@{viewmodel.hasSearchResult ? View.VISIBLE : View.GONE}" />-->
    </android.support.constraint.ConstraintLayout>
</layout>