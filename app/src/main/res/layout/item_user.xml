<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="user"
        type="com.mtleung.githubbrowser.model.search.SearchItem"/>
</data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:id="@+id/search.avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@{user.avatarUrl}"/>
    <TextView
        android:id="@+id/search.name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@{user.name}"
        app:layout_constraintTop_toTopOf="@id/search.avatar"
        app:layout_constraintBottom_toBottomOf="@id/search.avatar"
        app:layout_constraintStart_toEndOf="@id/search.avatar"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
</layout>